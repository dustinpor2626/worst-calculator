<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".calculator">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@android:color/darker_gray"
        android:text="0"
        android:textSize="50dp"
        android:textColor="@color/colorAccent"
        android:padding="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/display"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:text="+"
            android:textSize="60dp"
            android:textStyle="italic"
            android:padding="0dp"/>


        <Button
            android:id="@+id/sub"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:text="-"
            android:textSize="60dp"
            android:textStyle="italic"
            android:padding="0dp"/>

        <Button
            android:id="@+id/mul"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:text="*"
            android:textSize="60dp"
            android:textStyle="italic"
            android:padding="0dp"/>

        <Button
            android:id="@+id/div"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:text="/"
            android:textSize="60dp"
            android:textStyle="italic"
            android:padding="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:text="1"
            android:textSize="60dp"
            android:textStyle="italic"
            android:id="@+id/one"
            android:padding="0dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:text="2"
            android:textSize="60dp"
            android:textStyle="italic"
            android:id="@+id/two"
            android:padding="0dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:text="3"
            android:textSize="60dp"
            android:textStyle="italic"
            android:id="@+id/three"
            android:padding="0dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:text="4"
            android:textSize="60dp"
            android:textStyle="italic"
            android:id="@+id/four"
            android:padding="0dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:text="5"
            android:textSize="60dp"
            android:textStyle="italic"
            android:id="@+id/five"
            android:padding="0dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:text="6"
            android:textSize="60dp"
            android:textStyle="italic"
            android:id="@+id/six"
            android:padding="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:text="7"
            android:textSize="60dp"
            android:textStyle="italic"
            android:id="@+id/seven"
            android:padding="0dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:text="8"
            android:textSize="60dp"
            android:textStyle="italic"
            android:id="@+id/eight"
            android:padding="0dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:text="9"
            android:textSize="60dp"
            android:textStyle="italic"
            android:id="@+id/nine"
            android:padding="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="."
            android:textSize="60dp"
            android:textStyle="italic"
            android:id="@+id/dot"
            android:padding="0dp"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="0"
            android:textSize="60dp"
            android:textStyle="italic"
            android:id="@+id/zero"
            android:padding="0dp"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="="
            android:textSize="60dp"
            android:textStyle="italic"
            android:id="@+id/equal"
            android:padding="0dp"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="Reset"
            android:textSize="30dp"
            android:textStyle="italic"
            android:id="@+id/reset"
            android:padding="0dp"/>

    </LinearLayout>
</LinearLayout>